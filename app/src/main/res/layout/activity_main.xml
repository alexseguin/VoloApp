<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
android:paddingRight="@dimen/activity_horizontal_margin"
android:paddingTop="@dimen/activity_vertical_margin"
android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
android:background="@drawable/coffeemod"
    android:backgroundTint="#999966"
    android:backgroundTintMode="screen"
    android:clickable="false">


    <!-- LOGO -->
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"

        android:id="@+id/logo"

        android:src="@drawable/translogo"/>

    <!-- BOUTTON POUR LA CONNEXION -->
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="33dp"
        android:layout_above="@+id/inscription"

        android:onClick="onLogin"
        android:id="@+id/connexion"
        android:text="Connexion"

        android:background="#FFFFFF"
        android:fontFamily="sans-serif-thin"
        android:textSize="60px"
        android:textColor="#7F7F7F"
        android:paddingLeft="40px"
        android:paddingRight="40px"    />

    <!-- BOUTTON POUR L'INSCRIPTION -->
    <Button
        android:layout_width="wrap_content"
        android:layout_height="60px"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"

        android:id="@+id/inscription"
        android:onClick="onSignUp"

        android:background="#FFFFFF"
        android:text="Inscription"
        android:fontFamily="sans-serif-thin"
        android:textSize="30px"
        android:paddingLeft="20px"
        android:paddingRight="20px" />

    <!-- INPUT POUR LE NOM D'UTILISATEUR -->
    <TextView
        android:layout_width="300px"
        android:layout_height="80px"
        android:layout_centerVertical="true"
        android:layout_alignRight="@+id/connexion"
        android:layout_alignEnd="@+id/connexion"
        android:layout_alignLeft="@+id/connexion"
        android:layout_alignStart="@+id/connexion"
        android:ellipsize="start"
        android:gravity="center"

        android:id="@+id/username"
        android:editable="true"

        android:background="#ffffff"
        android:textColorHint="#D8D8D8"
        android:hint="Nom d&apos;utilisateur" />

    <!-- INPUT POUR LE MOT DE PASSE -->
    <TextView
        android:layout_width="300px"
        android:layout_height="80px"
        android:layout_marginTop="26dp"
        android:layout_below="@+id/username"
        android:layout_alignLeft="@+id/connexion"
        android:layout_alignStart="@+id/connexion"
        android:layout_alignRight="@+id/connexion"
        android:layout_alignEnd="@+id/connexion"
        android:ellipsize="start"
        android:gravity="center"

        android:id="@+id/password"
        android:editable="true"

        android:background="#ffffff"
        android:textColorHint="#D8D8D8"
        android:hint="Mot de passe" />

</RelativeLayout>
